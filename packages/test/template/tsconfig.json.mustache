{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2015", "es2015.core", "es2015.collection"],
    "jsx": "react-native",
    "outDir": "./dist/",
    // "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["../../src/*"],
      "@packages/*": ["../*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "../types/index.d.ts",
    "./src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false
}
